<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vienna.jaray.mapper.SysUserMapper">
	
	<sql id="Base_Column_List" >
		u.id,name,u.password,u.salt,u.email,u.mobile,u.status,u.dept_id,
        u.create_by,u.create_time,u.last_update_by,u.last_update_time,u.del_flag
    </sql>
	
	<!-- 查询用户信息 -->
    <select id="findSysUser" resultType="sysUserEntity">
       select 
       	   <include refid="Base_Column_List" />
       from sys_user u where u.name = #{name}
    </select>
    
</mapper>